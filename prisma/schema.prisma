generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// AUTHENTICATION & MULTI-TENANCY
// ============================================================================

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Billing / entitlements (discovred subscription, not the customer's Stripe data)
  isComped     Boolean         @default(false)
  compedTier   EntitlementTier?
  compedUntil  DateTime?
  compedReason String?

  // Relations
  users               User[]
  stripeConnection    StripeConnection?
  billingSubscription BillingSubscription?
  customers           StripeCustomer[]
  subscriptions       StripeSubscription[]
  invoices            StripeInvoice[]
  payments            StripePayment[]
  dailyMetrics        DailyMetrics[]
  insights            AIInsight[]
  recommendations     AIRecommendation[]
  syncLogs            SyncLog[]
  subscriptionEvents  SubscriptionEvent[]
  pricingExperiments  PricingExperiment[]
  forecastCaches      ForecastCache[]
  stripeWebhookEvents StripeWebhookEvent[]

  @@map("organizations")
}

enum EntitlementTier {
  STARTER
  GROWTH
  SCALE
  ENTERPRISE
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String?
  hashedPassword String?
  emailVerified  DateTime?
  image          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  accounts       Account[]
  sessions       Session[]

  @@map("users")
}

// ============================================================================
// discovred BILLING (Your app's own subscription)
// ============================================================================

model BillingSubscription {
  id String @id @default(cuid())

  // Relations
  organizationId String       @unique
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Stripe identifiers (for discovred billing subscriptions)
  stripeSubscriptionId String @unique // sub_xxx
  stripeCustomerId     String? // cus_xxx

  // Status & period (mirrors Stripe)
  status             String
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean   @default(false)
  canceledAt         DateTime?
  endedAt            DateTime?
  trialStart         DateTime?
  trialEnd           DateTime?

  // What they bought (stored from subscription metadata)
  tierKey   String? // "growth" | "scale" etc
  interval  String? // "monthly" | "annually"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@map("billing_subscriptions")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// STRIPE CONNECTION
// ============================================================================

model StripeConnection {
  id                    String    @id @default(cuid())
  stripeAccountId       String    @unique // Stripe Connect account ID (acct_xxx)
  accessToken           String    @db.Text // Encrypted OAuth access token
  refreshToken          String?   @db.Text // Encrypted OAuth refresh token
  tokenType             String    @default("bearer")
  scope                 String?   // Granted scopes
  livemode              Boolean   @default(false)
  connectedAt           DateTime  @default(now())
  disconnectedAt        DateTime?
  lastSyncAt            DateTime?
  lastSyncStatus        String?   // "success" | "failed" | "in_progress"
  lastSyncError         String?   @db.Text

  // Relations
  organizationId String       @unique
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("stripe_connections")
}

// ============================================================================
// STRIPE DATA (Normalized)
// ============================================================================

model StripeCustomer {
  id              String    @id @default(cuid())
  stripeId        String    // cus_xxx
  email           String?   // Hashed/anonymized for privacy
  createdAt       DateTime  @default(now())
  stripeCreatedAt DateTime
  currency        String?
  delinquent      Boolean   @default(false)
  metadata        Json?

  // Relations
  organizationId String
  organization   Organization         @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  subscriptions  StripeSubscription[]
  invoices       StripeInvoice[]
  payments       StripePayment[]

  @@unique([organizationId, stripeId])
  @@index([organizationId])
  @@map("stripe_customers")
}

model StripeSubscription {
  id                  String    @id @default(cuid())
  stripeId            String    // sub_xxx
  status              String    // active, canceled, past_due, etc.
  currentPeriodStart  DateTime
  currentPeriodEnd    DateTime
  cancelAtPeriodEnd   Boolean   @default(false)
  canceledAt          DateTime?
  endedAt             DateTime?
  trialStart          DateTime?
  trialEnd            DateTime?
  startDate           DateTime
  billingCycleAnchor  DateTime
  
  // Plan info
  planId              String?   // price_xxx
  planNickname        String?   // Plan display name
  planAmount          Int       // Amount in cents
  planCurrency        String    @default("usd")
  planInterval        String    // month, year, etc.
  planIntervalCount   Int       @default(1)
  
  // Discounts
  discountId          String?   // Coupon/discount ID
  discountPercent     Float?    // Discount percentage
  discountAmountOff   Int?      // Fixed amount off
  
  // Quantity
  quantity            Int       @default(1)
  
  // Computed
  mrr                 Int       // Monthly recurring revenue in cents
  arr                 Int       // Annual recurring revenue in cents
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  stripeCreatedAt     DateTime
  metadata            Json?

  // Relations
  organizationId String
  organization   Organization          @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customerId     String
  customer       StripeCustomer        @relation(fields: [customerId], references: [id], onDelete: Cascade)
  events         SubscriptionEvent[]

  @@unique([organizationId, stripeId])
  @@index([organizationId, status])
  @@index([organizationId, planId])
  @@map("stripe_subscriptions")
}

model StripeInvoice {
  id                  String    @id @default(cuid())
  stripeId            String    // in_xxx
  status              String    // draft, open, paid, void, uncollectible
  amountDue           Int       // Amount in cents
  amountPaid          Int       // Amount paid in cents
  amountRemaining     Int       // Amount remaining in cents
  subtotal            Int       // Before discounts
  total               Int       // After discounts
  tax                 Int?      // Tax amount
  currency            String    @default("usd")
  
  // Discounts applied
  discountAmount      Int       @default(0)
  
  // Dates
  periodStart         DateTime
  periodEnd           DateTime
  dueDate             DateTime?
  paidAt              DateTime?
  
  // Billing
  billingReason       String?   // subscription_create, subscription_cycle, etc.
  subscriptionId      String?   // Reference to subscription
  
  createdAt           DateTime  @default(now())
  stripeCreatedAt     DateTime
  metadata            Json?

  // Relations
  organizationId String
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customerId     String
  customer       StripeCustomer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@unique([organizationId, stripeId])
  @@index([organizationId, status])
  @@index([organizationId, stripeCreatedAt])
  @@map("stripe_invoices")
}

model StripePayment {
  id                String    @id @default(cuid())
  stripeId          String    // ch_xxx or pi_xxx
  status            String    // succeeded, failed, pending, etc.
  amount            Int       // Amount in cents
  amountRefunded    Int       @default(0)
  currency          String    @default("usd")
  
  // Fees
  fee               Int       @default(0) // Stripe fee
  net               Int       // Amount minus fees
  
  // Failure info
  failureCode       String?
  failureMessage    String?
  
  // Payment method
  paymentMethodType String?   // card, bank_transfer, etc.
  
  createdAt         DateTime  @default(now())
  stripeCreatedAt   DateTime
  metadata          Json?

  // Relations
  organizationId String
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customerId     String?
  customer       StripeCustomer? @relation(fields: [customerId], references: [id], onDelete: SetNull)

  @@unique([organizationId, stripeId])
  @@index([organizationId, status])
  @@index([organizationId, stripeCreatedAt])
  @@map("stripe_payments")
}

// ============================================================================
// COMPUTED METRICS
// ============================================================================

model DailyMetrics {
  id                    String   @id @default(cuid())
  date                  DateTime @db.Date
  
  // Revenue Metrics
  mrr                   Int      // Monthly Recurring Revenue in cents
  arr                   Int      // Annual Recurring Revenue in cents
  arpu                  Int      // Average Revenue Per User in cents
  
  // Subscription Metrics
  activeSubscriptions   Int      // Number of active subscriptions
  newSubscriptions      Int      // New subscriptions on this day
  canceledSubscriptions Int      // Canceled subscriptions on this day
  upgrades              Int      // Subscription upgrades
  downgrades            Int      // Subscription downgrades
  
  // Churn Metrics
  grossChurnRate        Float    // Percentage of customers lost
  revenueChurnRate      Float    // Percentage of MRR lost
  netRevenueRetention   Float    // Net revenue retention rate (expansion - churn)
  
  // Payment Metrics
  failedPayments        Int      // Number of failed payments
  successfulPayments    Int      // Number of successful payments
  failedPaymentRate     Float    // Failed payments / total attempts
  totalPaymentVolume    Int      // Total payment volume in cents
  
  // Pricing Metrics
  averageDiscount       Float    // Average discount percentage applied
  effectivePrice        Int      // Average actual paid vs list price in cents
  discountLeakage       Int      // Revenue lost to discounts in cents
  
  // Plan Distribution
  planDistribution      Json     // { "plan_id": count, ... }
  
  createdAt             DateTime @default(now())

  // Relations
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, date])
  @@index([organizationId, date])
  @@map("daily_metrics")
}

// ============================================================================
// FORECAST CACHE
// ============================================================================

model ForecastCache {
  id             String   @id @default(cuid())
  cacheKey       String
  daysAhead      Int
  data           Json
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, cacheKey])
  @@index([organizationId, expiresAt])
  @@map("forecast_cache")
}

// ============================================================================
// AI INSIGHTS & RECOMMENDATIONS
// ============================================================================

enum InsightCategory {
  CHURN
  PRICING
  REVENUE
  GROWTH
  EFFICIENCY
  ANOMALY
}

enum InsightSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model AIInsight {
  id              String          @id @default(cuid())
  category        InsightCategory
  severity        InsightSeverity
  title           String          // Short summary
  description     String          @db.Text // Full insight in plain English
  dataPoints      Json            // Supporting data for the insight
  confidence      Float           // 0-1 confidence score
  
  // Metadata
  generatedAt     DateTime        @default(now())
  validUntil      DateTime?       // When this insight should be re-evaluated
  isActive        Boolean         @default(true)
  dismissedAt     DateTime?
  
  // Relations
  organizationId  String
  organization    Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  recommendations AIRecommendation[]

  @@index([organizationId, isActive])
  @@index([organizationId, category])
  @@map("ai_insights")
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
}

enum RecommendationStatus {
  PENDING
  IMPLEMENTED
  DISMISSED
  EXPIRED
}

model AIRecommendation {
  id                    String               @id @default(cuid())
  title                 String               // Action title
  description           String               @db.Text // Full recommendation
  reasoning             String               @db.Text // Why this is recommended
  
  // Impact estimation
  riskLevel             RiskLevel
  estimatedImpact       Int                  // Estimated revenue impact in cents
  impactTimeframe       String               // "3 months", "6 months", etc.
  impactConfidence      Float                // 0-1 confidence in estimate
  
  // Priority scoring
  priorityScore         Int                  // 1-100, higher = more urgent
  
  // Status tracking
  status                RecommendationStatus @default(PENDING)
  implementedAt         DateTime?
  
  // Before/After tracking
  baselineMetrics       Json?                // Metrics at time of recommendation
  resultMetrics         Json?                // Metrics after implementation
  
  generatedAt           DateTime             @default(now())
  
  // Relations
  organizationId        String
  organization          Organization         @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  insightId             String?
  insight               AIInsight?           @relation(fields: [insightId], references: [id], onDelete: SetNull)

  @@index([organizationId, status])
  @@index([organizationId, priorityScore])
  @@map("ai_recommendations")
}

// ============================================================================
// SUBSCRIPTION EVENTS (Plan Changes)
// ============================================================================

enum SubscriptionEventType {
  UPGRADE
  DOWNGRADE
  NEW
  CANCELED
  REACTIVATED
}

model SubscriptionEvent {
  id                    String                @id @default(cuid())
  type                  SubscriptionEventType
  
  // MRR change tracking
  previousMrr           Int                   // MRR before the change
  newMrr                Int                   // MRR after the change
  mrrDelta              Int                   // Difference (positive = expansion, negative = contraction)
  
  // Plan change tracking
  previousPlanId        String?
  previousPlanNickname  String?
  newPlanId             String?
  newPlanNickname       String?
  
  // Quantity change tracking
  previousQuantity      Int?
  newQuantity           Int?
  
  occurredAt            DateTime              @default(now())
  
  // Relations
  organizationId        String
  organization          Organization          @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  subscriptionId        String
  subscription          StripeSubscription    @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([organizationId, occurredAt])
  @@index([organizationId, type])
  @@map("subscription_events")
}

// ============================================================================
// PRICING EXPERIMENTS (A/B Tests)
// ============================================================================

enum ExperimentStatus {
  DRAFT
  RUNNING
  PAUSED
  COMPLETED
  CANCELLED
}

model PricingExperiment {
  id                    String            @id @default(cuid())
  name                  String
  hypothesis            String            @db.Text
  description           String?           @db.Text
  
  // Target
  targetPlanId          String            // The plan being tested
  targetPlanName        String
  
  // Status
  status                ExperimentStatus  @default(DRAFT)
  
  // Timeline
  startedAt             DateTime?
  endedAt               DateTime?
  plannedDuration       Int               // Duration in days
  
  // Sample configuration
  trafficAllocation     Float             @default(50) // % of new signups in experiment
  minimumSampleSize     Int               // Required sample for significance
  
  // Statistical settings
  confidenceLevel       Float             @default(0.95) // 95% confidence
  minimumDetectableEffect Float           @default(0.05) // 5% MDE
  
  // AI-generated metadata
  aiGenerated           Boolean           @default(false)
  expectedLift          Float?            // Predicted lift %
  priority              Int?              // 1-10
  risks                 Json?             // Array of risk strings
  
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  
  // Relations
  organizationId        String
  organization          Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  variants              ExperimentVariant[]
  assignments           ExperimentAssignment[]
  
  @@index([organizationId, status])
  @@map("pricing_experiments")
}

model ExperimentVariant {
  id                    String            @id @default(cuid())
  name                  String            // "Control", "Variant A", etc.
  isControl             Boolean           @default(false)
  
  // Pricing
  priceCents            Int               // Price for this variant
  originalPriceCents    Int?              // Original price if different
  
  // Results (updated in real-time)
  visitors              Int               @default(0) // People who saw this price
  conversions           Int               @default(0) // People who subscribed
  churned               Int               @default(0) // People who cancelled
  totalRevenue          Int               @default(0) // Total revenue in cents
  
  // Calculated metrics
  conversionRate        Float?            // conversions / visitors
  averageRevenue        Float?            // revenue / conversions
  churnRate             Float?            // churned / conversions
  
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  
  // Relations
  experimentId          String
  experiment            PricingExperiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  assignments           ExperimentAssignment[]
  
  @@index([experimentId])
  @@map("experiment_variants")
}

model ExperimentAssignment {
  id                    String            @id @default(cuid())
  
  // Who was assigned
  visitorId             String            // Anonymous visitor ID or customer ID
  customerId            String?           // Stripe customer ID if converted
  subscriptionId        String?           // Stripe subscription ID if converted
  
  // Assignment
  assignedAt            DateTime          @default(now())
  
  // Conversion tracking
  converted             Boolean           @default(false)
  convertedAt           DateTime?
  conversionRevenue     Int?              // Revenue from conversion in cents
  
  // Churn tracking
  churned               Boolean           @default(false)
  churnedAt             DateTime?
  lifetimeRevenue       Int?              // Total revenue before churn
  
  // Relations
  experimentId          String
  experiment            PricingExperiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  variantId             String
  variant               ExperimentVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)
  
  @@unique([experimentId, visitorId])
  @@index([experimentId, variantId])
  @@index([customerId])
  @@map("experiment_assignments")
}

// ============================================================================
// STRIPE WEBHOOK EVENTS (Idempotency)
// ============================================================================

model StripeWebhookEvent {
  id              String   @id @default(cuid())
  eventId         String   @unique
  eventType       String
  stripeAccountId String?
  status          String   @default("processing") // processing | processed | ignored | failed
  receivedAt      DateTime @default(now())
  processedAt     DateTime?
  errorMessage    String?  @db.Text

  // Relations
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  @@index([organizationId, receivedAt])
  @@map("stripe_webhook_events")
}

// ============================================================================
// SYNC LOGS
// ============================================================================

model SyncLog {
  id              String   @id @default(cuid())
  type            String   // "full" | "incremental" | "manual"
  status          String   // "started" | "completed" | "failed"
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  
  // Stats
  customersSync   Int      @default(0)
  subscriptionsSync Int    @default(0)
  invoicesSync    Int      @default(0)
  paymentsSync    Int      @default(0)
  
  // Errors
  errorMessage    String?  @db.Text
  errorDetails    Json?

  // Relations
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId, startedAt])
  @@map("sync_logs")
}


