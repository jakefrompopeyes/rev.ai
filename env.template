# Database
DATABASE_URL="postgresql://user:password@localhost:5432/discovred?schema=public"

# Supabase - Get from https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Google OAuth (configured in Supabase Dashboard)
# No environment variables needed - Google OAuth is configured directly in Supabase
# See GOOGLE_OAUTH_SETUP.md for setup instructions

# Stripe Configuration
# Get keys from https://dashboard.stripe.com/apikeys
# Get Client IDs from https://dashboard.stripe.com/settings/connect (in respective mode)
# IMPORTANT: Make sure to use LIVE keys for production, TEST keys for development

# Mode toggle: "test" or "live" (auto-detects from key prefix if not set)
# Set to "live" for production, "test" for development/testing
STRIPE_MODE="live"

# Option 1: Separate keys for each mode (recommended for easy switching)
STRIPE_CLIENT_ID_TEST="ca_YOUR_TEST_CLIENT_ID"
STRIPE_CLIENT_ID_LIVE="ca_YOUR_LIVE_CLIENT_ID"
STRIPE_SECRET_KEY_TEST="sk_test_YOUR_TEST_SECRET_KEY"
STRIPE_SECRET_KEY_LIVE="sk_live_YOUR_LIVE_SECRET_KEY"
STRIPE_PUBLISHABLE_KEY_TEST="pk_test_YOUR_TEST_PUBLISHABLE_KEY"
STRIPE_PUBLISHABLE_KEY_LIVE="pk_live_YOUR_LIVE_PUBLISHABLE_KEY"

# Option 2: Single keys (uses STRIPE_MODE or auto-detects from prefix)
# STRIPE_CLIENT_ID="ca_YOUR_CLIENT_ID"
# STRIPE_SECRET_KEY="sk_test_YOUR_SECRET_KEY"
# STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_PUBLISHABLE_KEY"

# Stripe Webhooks (for real-time data updates)
# Option 1: Separate secrets for test/live (recommended)
# For local dev with Stripe CLI: Use secret from "stripe listen" output
# For Dashboard webhooks: Use secret from Dashboard → Webhooks → Your endpoint
STRIPE_WEBHOOK_SECRET_TEST="whsec_YOUR_TEST_WEBHOOK_SECRET"
STRIPE_WEBHOOK_SECRET_LIVE="whsec_YOUR_LIVE_WEBHOOK_SECRET"

# Option 2: Single secret (uses STRIPE_MODE or auto-detects)
# STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"

# For local development with Stripe CLI:
# stripe listen --forward-to localhost:3000/api/stripe/webhook
# Copy the secret it outputs to STRIPE_WEBHOOK_SECRET_TEST

# OpenAI - For AI insights
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Stripe pricing (required in production for billing tiers)
STRIPE_PRICE_GROWTH_MONTHLY="price_growth_monthly"
STRIPE_PRICE_GROWTH_ANNUALLY="price_growth_annually"
STRIPE_PRICE_SCALE_MONTHLY="price_scale_monthly"
STRIPE_PRICE_SCALE_ANNUALLY="price_scale_annually"

# Data privacy
PII_HASH_SECRET="replace-with-random-32-bytes"

# App Configuration
APP_URL="http://localhost:3000"

# Free Mode (disable billing and give free access to all users)
# Set to "true" to automatically grant comped access to all new organizations
FREE_MODE="false"

# Forecast caching (optional)
FORECAST_CACHE_TTL_MS="21600000"

